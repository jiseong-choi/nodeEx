{
  "name": "outqource-docker",
  "version": "0.0.1",
  "scripts": {
    "config:local": "cp ./env/.env.local .env",
    "config:dev": "cp ./env/.env.dev .env ",
    "config:prod": "cp ./env/.env.prod .env",
    "_migrate": "prisma migrate dev",
    "_run": "nodemon --watch '*.ts' --exec 'ts-node' -r tsconfig-paths/register ./src/index.ts",
    "_build": "rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "_start": "node dist/index.js",
    "local": "yarn config:local && yarn _run",
    "dev": "yarn config:dev && yarn _run",
    "prod": "yarn config:prod && yarn _run",
    "migrate:dev": "yarn config:dev && yarn _migrate",
    "migrate:stage": "yarn config:stage && yarn _migrate",
    "migrate:prod": "yarn config:prod && yarn _migrate",
    "build:dev": "yarn config:dev && yarn _build",
    "build:stage": "yarn config:dev && yarn _build",
    "build:prod": "yarn config:prod && yarn _build",
    "image:dev": "cp env/dev.Dockerfile Dockerfile && yarn build:dev",
    "image:stage": "cp env/stage.Dockerfile Dockerfile && yarn build:stage",
    "image:prod": "cp env/prod.Dockerfile Dockerfile && yarn build:prod"
  },
  "dependencies": {
    "@adminjs/express": "^5.0.0",
    "@adminjs/prisma": "^3.0.1",
    "@fuseble.inc/node": "^0.0.1",
    "@prisma/client": "^4.2.1",
    "@types/bcryptjs": "^2.4.2",
    "adminjs": "^6.1.4",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-formidable": "^1.2.0",
    "express-session": "^1.17.3",
    "hangul-js": "^0.2.6",
    "helmet": "^5.1.0",
    "module-alias": "^2.2.2",
    "nanoid": "^4.0.0",
    "node-schedule": "^2.1.0",
    "path": "^0.12.7",
    "prisma": "^4.2.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.0",
    "@types/node-schedule": "^2.1.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "fs-extra": "^10.1.0",
    "nodemon": "^2.0.18",
    "ts-node": "^10.8.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
